{
    "version": 2,
    "builds": [
        {
            "src": "./frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "./frontend/dist"
            }
        },
        {
            "src": "./backend/dist/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/dist/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/$1"
        }
    ]
}
