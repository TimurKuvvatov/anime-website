{
    "version": 2,
    "functions": {
        "api/(.*)": {
            "runtime": "nodejs20.x"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/dist/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}
